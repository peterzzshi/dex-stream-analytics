# Blockchain Configuration
# Polygon RPC URL (use your own for production, or leave as default for public RPC)
POLYGON_RPC_URL=https://polygon-rpc.com
# Alternative providers:
# POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_API_KEY

# QuickSwap WMATIC/USDC pair address on Polygon
PAIR_ADDRESS=0x6e7a5FAFcec6BB1e78bAE2A1F0B612012BF14827

# Alternative pairs:
# WETH/USDC: 0x853Ee4b2A13f8a742d64C8F088bE7bA2131f670d
# USDC/USDT: 0x2cF7252e74036d1Da831d11089D326296e64a728

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_DEX_EVENTS=dex-events
KAFKA_TOPIC_DEX_ANALYTICS=dex-analytics

# Schema Registry
SCHEMA_REGISTRY_URL=http://schema-registry:8081

# Ingester Configuration
INGESTER_BATCH_SIZE=100
INGESTER_FLUSH_INTERVAL=5s
INGESTER_RETRY_MAX=3

# Flink Configuration
FLINK_PARALLELISM=2
FLINK_CHECKPOINT_INTERVAL=60s
FLINK_WINDOW_SIZE=5m

# API Configuration
API_PORT=8080
API_STORAGE_TYPE=memory
# API_STORAGE_TYPE=postgres
# API_POSTGRES_URL=postgres://user:password@localhost:5432/dexanalytics

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Application Ports
APP_INGESTER_PORT=3000
APP_API_PORT=8080

# Development
ENVIRONMENT=development